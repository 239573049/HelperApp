@using HelperApp.Domain
@inherits LayoutComponentBase

<MCard
    Class="mx-auto overflow-hidden card">
    <MAppBar
        Color="deep-purple"
        Dark>
        <MAppBarNavIcon @onclick="() => drawer = true"></MAppBarNavIcon>

        <MToolbarTitle>Title</MToolbarTitle>
    </MAppBar>
    <MMain>
        @Body
    </MMain>
    <MNavigationDrawer
        @bind-Value="drawer"
        Absolute
        Temporary>
        <MList
            Nav
            Dense>
            <MListItemGroup
                @bind-Value="group"
                ActiveClass="deep-purple--text text--accent-4">
                @foreach (var i in mainItems)
                {
                    <MListItem Href="@i.Href">
                        <MListItemIcon>
                            <MIcon>@i.Icon</MIcon>
                        </MListItemIcon>
                        <MListItemTitle>@i.Title</MListItemTitle>
                    </MListItem>
                }
            </MListItemGroup>
        </MList>
    </MNavigationDrawer>
</MCard>
@code{
    bool drawer;
    StringNumber group;
    List<MainItems> mainItems=new List<MainItems>();
    protected override void OnInitialized()
    {
        mainItems.Add(new MainItems
        {
            Icon="mdi-home",
            Title="首页",
            Href="/"
        });
        mainItems.Add(new MainItems
        {
            Icon="mdi-wrench",
            Title="功能",
            Href="/function"
        });
    }
}

<style>
    .card{
        height:100%;
    }
html{
    height:100%;
}
body{
    height:100%;
}
</style>