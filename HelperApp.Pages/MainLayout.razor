@using HelperApp.Domain
@inherits LayoutComponentBase
<MApp> 
    <MErrorHandler>
<MCard Class="mx-auto overflow-hidden card">
    <MAppBar Color="deep-purple"
             Dark>
        <MAppBarNavIcon @onclick="() => drawer = true"></MAppBarNavIcon>

        <MToolbarTitle>Title</MToolbarTitle>
    </MAppBar>
    <MMain class="main-home">
        @Body
    </MMain>

    <MNavigationDrawer @bind-Value="drawer"
                       Absolute
                       Temporary>
        <MList Nav
               Dense>
            <MListItemGroup @bind-Value="group"
                            ActiveClass="deep-purple--text text--accent-4">
                @foreach(var i in mainItems)
                {
                    <MListItem Href="@i.Href">
                        <MListItemIcon>
                            <MIcon>@i.Icon</MIcon>
                        </MListItemIcon>
                        <MListItemTitle>@i.Title</MListItemTitle>
                    </MListItem>
                }
            </MListItemGroup>
        </MList>
    </MNavigationDrawer>

</MCard>
</MErrorHandler>
</MApp>
<style>
    .main-home {
        width: 100%;
        height: 100%;
    }

    .card {
        height: 100%;
        width: 100%;
    }

    html {
        height: 100%;
        width: 100%;
    }

    body {
        height: 100%;
        width: 100%;
    }
</style>