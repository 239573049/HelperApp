@page "/function"

<MRow Dense class="function-home">
    @foreach(var card in _cards)
    {
        <MCol key="@card.Title" Cols=@card.Flex class="function-col">
            <MCard Height="70" Href="@card.Href" class="function-card">
                <MCardTitle class="function-content">@card.Title</MCardTitle>
            </MCard>
        </MCol>
    }
</MRow>
<style>
    .function-content {
        height: 100%;
        font-size:12px;
        color:#000000;
    }

    .function-card{
        background-color: rgb(255 255 255 / 1%) !important;
    }

    .function-col{
        margin-right:8px;
        margin-left:8px;
        margin-top:8px;
    }

    .function-home {
        background: url(background.jpg);
        width: 100%;
        height: 100%;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center 0;
    }
</style>